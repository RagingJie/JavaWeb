    <!--    第二种方式 使用<where>标签-->
    <select id="getEmpByNameAndSalary" resultType="com.naruto.mybatis.model.pojo.Emp">
        select *
        from t_emp
        <where>
            <if test="name != null">
                and emp_name = #{name}
            </if>
            <if test="salary != null">
                and emp_salary = #{salary}
            </if>
        </where>
    </select>

    <update id="updateEmp">
        update t_emp
        <set>
            <if test="empName != null">
                emp_name =#{empName},
            </if>
            <if test="empSalary != null">
                emp_salary=#{empSalary},
            </if>
            <if test="age != null">
                age=#{age}
            </if>
        </set>
        where id = #{id}
    </update>
